<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:scrollbarStyle="insideOverlay">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        app:civ_border_color="#FF000000"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></EditText>
    <!--<EditText
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></EditText>

    <EditText
        android:id="@+id/passwosrd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></EditText>
    <EditText
        android:id="@+id/confirmpasswosrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="confirm password"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"></EditText> !-->
    <EditText
        android:id="@+id/age_filed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="age"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></EditText>
    <EditText
        android:id="@+id/address_filed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid2"
        android:text="finish"
        android:id="@+id/finsh"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
</LinearLayout>